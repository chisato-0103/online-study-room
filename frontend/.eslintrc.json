{
  "root": true,
  "env": { 
    "browser": true, 
    "es2020": true,
    "node": true 
  },
  "extends": [
    "eslint:recommended"
  ],
  "ignorePatterns": ["dist", "node_modules", "*.config.js", "*.config.ts", "vite-env.d.ts"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "off",
    "eqeqeq": "error"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}